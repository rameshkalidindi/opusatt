
CREATE TABLE PRODUCTS (
		PRODUCTID INTEGER NOT NULL,
		PRODUCTNAME VARCHAR(30),
		PRODUCTDESC VARCHAR(30),
		RELATEDPRODUCTS VARCHAR(50)
	);

CREATE UNIQUE INDEX SYS_IDX_SYS_PK_10092_10093 ON PRODUCTS (USERID ASC);

ALTER TABLE PRODUCTS ADD CONSTRAINT SYS_PK_10092 PRIMARY KEY (PRODUCTID);

SELECT * FROM PRODUCTS

--DROP table PRODUCTS

CREATE TABLE products (
  productid int GENERATED BY DEFAULT AS IDENTITY (START WITH 1 INCREMENT BY 1) not null,
  productname varchar(45) DEFAULT NULL,
  productdesc varchar(45) DEFAULT NULL,
  relatedproducts varchar(100) DEFAULT NULL,
  PRIMARY KEY (productid)
);
